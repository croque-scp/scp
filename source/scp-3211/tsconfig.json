{
  "compilerOptions": {
    "baseUrl": "./src/",
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ],
}